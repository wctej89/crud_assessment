<div class="container">
  <h1><%= @note.title ? "Edit" : "Create" %> Note</h1>

  <form action="/notes/<%=@note.id%>/update" method="post">
    <input type="hidden" name="_method" value="put">
    <input type="text" name="title" value= "<%= @note.title %>" placeholder="Enter Title"></br>
    <input type="text" name="content" value= "<%= @note.content %>" placeholder="Enter Note">
    <input type="submit" value="Submit">
  </form>

  <form action="/notes/<%=@note.id%>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete"> 
  </form>
</div>
